@charset "utf-8";
@import url(reset.css);
@import url(jquery-ui.css);
@import url(jquery-ui.theme.css);

/* header */
.header { 
	height:65px;
	border-top:5px solid #888;
	border-bottom:1px solid #ddd;
	position:relative;
	background:url('../images/common/header_bg.png') repeat-x;
	-webkit-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.05);
	-moz-box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.05);
	box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.05);
}
.header:after { 
	content:"";
	display:block;
	width:220px;
	height:5px;
	background:#ba4539;
	position:absolute;
	top:-5px;
	left:0;
}
.logo { 
	width:142px;
	height:24px;
	position:absolute;
	top:50%;
	left:35px;
	margin-top:-12px;
}
.logo a { 
	display:block;
	width:142px;
	height:24px;
	background:url('../images/common/logo.png') no-repeat 50%;
	text-indent:-9999px;
}
.gnbArea { 
	padding-left:220px;
}
.gnb > li {
	float:left;
}
.gnb > li > a { 
	display:block;
	height:65px;
	line-height:65px;
	font-size:17px;
	font-weight:bold;
	color:#444;
	padding:0 60px;
}


/* contente */
.content { 
	overflow:hidden;
	padding:10px 0 0;
} 


/* LNB */
.lnbArea { 
	float:left;
	width:220px;
}
.lnbTit { 
	height:80px;
	line-height:80px;
	padding:0 15px;
	font-size:20px;
	font-weight:bold;
	color:#444;
}
.lnbTit.icon01 { 
	background:url('../images/common/lnb_tit_icon01.png') no-repeat 100% 100%;
}

/* LNB menu */
#cssmenu ul li a {
	display: block;
	position: relative;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
#cssmenu ul ul {
	display: none;
}
#cssmenu > ul > li.active > ul {
	display: block;
}
#cssmenu > ul > li > a {
	height:50px;
	line-height:50px;
	cursor: pointer;
	z-index: 2;
	font-size: 16px;
	font-weight:bold;
	color:#212b3a;
	border-bottom:1px solid #ddd;
	text-indent:10px;
}
#cssmenu ul > li.has-sub > a:after {
	position: absolute;
	right: 10px;
	top: 50%;
	z-index: 5;
	display: block;
	height: 8px;
	width: 14px;
	margin-top:-4px;
	content: "";
	background:url('../images/common/lnb_down.png') no-repeat 50%;
}
#cssmenu ul > li.has-sub.open > a:after { 
	background:url('../images/common/lnb_up.png') no-repeat 50%;
}
#cssmenu ul > li.has-sub.open > a { 
	border:0;
}
#cssmenu ul > li.has-sub.open > ul { 
	border-top:2px solid #666;
	border-bottom:2px solid #666;
}
#cssmenu ul > li.has-sub.open > ul ul { 
	border:0;
}
#cssmenu ul ul li > a {
	height:35px;
	line-height:35px;
	z-index: 2;
	font-size: 14px;
	color: #444;
	padding:0 10px;
	cursor: pointer;
    letter-spacing:-1px;
}
#cssmenu ul ul ul { 
	padding:10px 0;
	background:#f3f4f7;
}
#cssmenu ul ul ul li > a {
	height:28px;
	line-height:28px;	
	cursor: pointer;
	font-size:13px;
	padding:0 18px;
}
#cssmenu ul ul > li.has-sub > a:after {
	position: absolute;
	right: 10px;
	top: 50%;
	z-index: 5;
	display: block;
	height: 10px;
	width: 10px;
	margin-top:-5px;
	content: "";
	background:url('../images/common/lnb_plus.png') no-repeat 50%;
}
#cssmenu ul ul > li.has-sub.open > a:after { 
	background:url('../images/common/lnb_minus.png') no-repeat 50%;
}
#cssmenu ul li.active > a,
#cssmenu ul ul li.active > a,
#cssmenu ul ul ul  li.active > a { 
	color:#648dd6;
}

/* content */
.contArea { 
	margin-left:220px;
	background:#eee;
	padding:20px;
}


/* Jq그리드 */
.jqGridArea {
	border-top:2px solid #646464;
	border-right:1px solid #e5e5e5;
	overflow:hidden;
}
.jqGridArea .ui-jqgrid {
	border-radius:0;
}
.jqGridArea .ui-jqgrid-hbox .ui-jqgrid-htable thead th {
	background:#f4f4f4;
	height:34px;
	padding:0 5px;
	box-sizing:border-box;
}
.jqGridArea .ui-jqgrid-hbox .ui-jqgrid-htable thead th .ui-jqgrid-sortable {
	font-weight:bold;
	font-size:12px;
}
.jqGridArea .ui-widget-content {
	border:1px solid #e5e5e5;
	border-left:0;
	border-top:0;
}
.jqGridArea .ui-jqgrid .ui-jqgrid-view {
	border-left:1px solid #e5e5e5;
}
.jqGridArea .ui-jqgrid-bdiv .ui-jqgrid-btable tbody td {
	height:28px;
	font-size:12px;
	padding:0 5px;
	box-sizing:border-box;
}
.jqGridArea .ui-jqgrid-pager {
	background:#fafafa;
	border-left:1px solid #e5e5e5 !important;
	border-radius:0;
	box-sizing:inherit !important;
}
.ui-jqgrid .ui-jqgrid-htable .ui-jqgrid-labels th div {
	font-weight:bold;
}


